    "graphql-request": "^7.1.0",
    "ioredis": "^5.4.1",
    "node-html-parser": "^6.1.13",
    "remeda": "^2.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.12.12",
    "@biomejs/biome": "^1.8.3",
    "@grammyjs/auto-chat-action": "^0.1.1",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.3.3",

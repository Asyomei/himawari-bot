{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "paths": {
      "#/*": [
        "./src/*"
      ]
    },
    "outDir": "./dist/",
    "noErrorTruncation": true,
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./shikimori.graphql"
      }
    ]
  },
  "include": [
    "./src"
  ]
}
